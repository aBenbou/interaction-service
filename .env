# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
DEBUG=True

# Database configuration
DATABASE_URI=postgresql://postgres:postgres@interaction_db:5432/interaction_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=interaction_db

# JWT configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Service URLs
AUTH_SERVICE_URL=http://auth_api:5000
USER_SERVICE_URL=http://profile_api:5001
MODEL_SERVICE_URL=http://model_api:8000

# Event Bus (optional)
EVENT_BUS_ENABLED=False
EVENT_BUS_TYPE=http  # http, rabbitmq, kafka
EVENT_BUS_URL=http://event_bus:8080/events

# Logging
LOG_LEVEL=INFO